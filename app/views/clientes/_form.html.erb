
<%= simple_form_for(@cliente, wrapper: :horizontal_form,
wrapper_mappings: {
  boolean:       :horizontal_boolean,
  check_boxes:   :horizontal_collection,
  date:          :horizontal_multi_select,
  datetime:      :horizontal_multi_select,
  file:          :horizontal_file,
  radio_buttons: :horizontal_collection,
  range:         :horizontal_range,
  time:          :horizontal_multi_select
}, validate: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nombre, label: 'Nombre', :required => true %>
    <%= f.input :mail, label: 'Correo', placeholder: 'nombre@dominio.com', :required => true %>
    <%= f.input :telefono, label: 'TelÃ©fono', placeholder: '+56912345678', :required => true %>
  </div>
  
  <div class="form-group">
      <h6 class="fw-6 text-black">Porfavor ingrese sus preferencias:</h6>
      <br>
    <%= f.input :fechacompra %>
    <%= f.input :preciomin %>
    <%= f.input :preciomax %>
    <%= f.input :utilmin %>
    <%= f.input :utilmax %>
    <%= f.input :totalmin %>
    <%= f.input :totalmax %>
    <%= f.input :latmin %>
    <%= f.input :latmax %>
    <%= f.input :lonmin %>
    <%= f.input :lonmax %>
    <%= f.input :dormitoriosmin %>
    <%= f.input :dormitoriosmax %>
    <%= f.input :banosmin %>
    <%= f.input :banosmax %>
    <%= f.input :estacionamientos %>
    <%= f.input :tipo %>
    <%= f.input :operacion %>
    <%= f.input :estado %>
    <%= f.input :region %>
    <%= f.input :comuna1 %>
    <%= f.input :comuna2 %>
    <%= f.input :comuna3 %>
    <%= f.input :comuna4 %>
    <%= f.input :comuna5 %>
    <%= f.input :comuna6 %>
    <%= f.input :metrodistance %>
    <%= f.input :linea %>
    <%= f.input :lineab %>
    <%= f.input :lineac %>
    <%= f.input :activo %>
    <%= f.input :rentmin %>
    <%= f.input :sendmail %>
    <%= f.input :prioridad %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
