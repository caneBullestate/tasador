<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Mail</th>
      <th>Telefono</th>
      <th>Descripcion</th>
      <th>Tipo</th>
      <th>Operacion</th>
      <th>Region</th>
      <th>Comuna</th>
      <th>Direccion</th>
      <th>Superficie</th>
      <th>Dorms</th>
      <th>Bano</th>
      <th>Estacionamiento</th>
      <th>Anio</th>
      <th>Piso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.nombre %></td>
        <td><%= pedido.mail %></td>
        <td><%= pedido.telefono %></td>
        <td><%= pedido.descripcion %></td>
        <td><%= pedido.tipo %></td>
        <td><%= pedido.operacion %></td>
        <td><%= pedido.region %></td>
        <td><%= pedido.comuna %></td>
        <td><%= pedido.direccion %></td>
        <td><%= pedido.superficie %></td>
        <td><%= pedido.dorms %></td>
        <td><%= pedido.bano %></td>
        <td><%= pedido.estacionamiento %></td>
        <td><%= pedido.anio %></td>
        <td><%= pedido.piso %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

