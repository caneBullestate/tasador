
<div class= 'container'>
<%= simple_form_for pedido, wrapper: :horizontal_form, label_html: {class='form-horizontal'} do |f| %>
  
  
  
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group">
    <%= f.input :nombre, label: 'NOOOOMBRE' %>
    <%= f.input :mail %>
    <%= f.input :telefono %>
    <%= f.input :descripcion, as: :text %>
    <%= f.input :tipo, collection: 18 .. 60 %>
    <%= f.input :operacion %>
    <%= f.input :region, as: :radio_buttons %>
    <%= f.input :comuna %>
    <%= f.input :direccion %>
    <%= f.input :superficie %>
    <%= f.input :dorms %>
    <%= f.input :bano %>
    <%= f.input :estacionamiento %>
    <%= f.input :anio %>
    <%= f.input :piso %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

  
<% end %> 
</div>