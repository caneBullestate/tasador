
<div class= 'container'>
<%= simple_form_for( @pedido, wrapper: :horizontal_form,
wrapper_mappings: {
  boolean:       :horizontal_boolean,
  check_boxes:   :horizontal_collection,
  date:          :horizontal_multi_select,
  datetime:      :horizontal_multi_select,
  file:          :horizontal_file,
  radio_buttons: :horizontal_collection,
  range:         :horizontal_range,
  time:          :horizontal_multi_select
}, validate: true) do |f| %>
  
    
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group">
    <%= f.input :nombre, label: 'Nombre', :required => true %>
    <%= f.input :mail, label: 'Correo', placeholder: 'nombre@dominio.com', :required => true %>
   
    <%= f.input :telefono, label: 'Teléfono', placeholder: '+56912345678', :required => true %>
  </div> 
  <div class="form-group">
  <h6 class="fw-6 text-black">Porfavor ingrese los datos sobre la propiedad a tasar:</h6>
  <br>
    <%= f.input :tipo, collection: ['Departamento','Casa','Oficina', 'Terreno', 'Parcela', 'Estacionamiento'], :required => true %>
    <%= f.input :operacion, label: 'Operación', as: :radio_buttons, wrapper: :vertical_collection_inline, collection: ['Venta', 'Arriendo'], placeholder: 'Seleccione accion que desea realizar con la propiedad', :required => true %>
    <%= f.input :direccion, label: 'Dirección', hint: 'Dirección de la propiedad a tasar.', :required => true, :input_html => { :id => 'address' } %> 
    
    <%= f.input :latitud, :input_html => {name: 'lat', id: 'lat' }%>
    <%= f.input :longitud, :input_html => {name: 'lng', id: 'lng' }%>
    
   
    <%= f.input :region, collection: [
      'I Región de Tarapacá'], label: 'Región' %>
    <%= f.input :comuna, collection: ['Seleccione e'], label: 'Comuna' %>

    <%= f.input :superficie, placeholder: 'Superficie total aprox.', label: 'Superficie total'%>
    <%= f.input :sup_util, placeholder: 'Superficie util aprox.', label: "Superficie útil" %>
    <%= f.input :terreno, label: 'Superficie del terreno', hint: 'Metros cuadrados' %>
    <%= f.input :constr, label: 'Superficie construida', hint: 'Metros cuadrados'%>

    <%= f.input :dorms , label: 'Dormitorios', collection: 0 .. 10, :input_html => { :value => 1 }%>
    <%= f.input :bano, label: 'Baños', collection: 0 .. 10, :input_html => { :value => 1 } %>
    <%= f.input :estacionamiento , label: 'Estacionamientos', collection: 0 .. 10%>
    <%= f.input :anio, label: 'Año', options_for_select((1950..Time.current.year).to_a.reverse) %>
    <%= f.input :num_piso, label: 'Cantidad de Pisos', :input_html => { :value => 1 } %>
    <%= f.input :piso, label: 'Piso en el que se encuentra'%>
    <%= f.input :privado, label: 'Privado(s)'%>
    
    <%= f.input :norte , label: 'Orientación', as: :check_boxes, collection: ['Norte'], :input_html => { :value => 1 } %>
    <%= f.input :sur , label: '', as: :check_boxes, collection: ['Sur'], :input_html => { :value => 1 }  %>
    <%= f.input :oeste , label: '', as: :check_boxes, collection: ['Oeste'], :input_html => { :value => 1 }  %>
    <%= f.input :este , label: '' , as: :check_boxes, collection: ['Este'], :input_html => { :value => 1 } %>

    <%= f.input :descripcion, as: :text, placeholder: 'Datos adicionales que desee agregar sobre su propiedad' %>
   
    <script type="text/javascript">
    $('#pedido_tipo').on('change',function(){
        if ($('#pedido_tipo').val() == 'Terreno'){
          $('.pedido_superficie').hide();
          $('.pedido_sup_util').hide();
          $('.pedido_estacionamiento').hide();
          $('.pedido_dorms').hide();
          $('.pedido_bano').hide();
          $('.pedido_piso').hide();
          $('.pedido_orientacion').hide();
          $('.pedido_anio').hide();
          $('.pedido_constr').hide();
          $('.pedido_terreno').show();
          $('.pedido_num_piso').hide();
          $('.pedido_privado').hide();
         
          }
        else if ($('#pedido_tipo').val() == 'Estacionamiento'){
          $('.pedido_superficie').hide();
          $('.pedido_sup_util').hide();
          $('.pedido_estacionamiento').hide();
          $('.pedido_dorms').hide();
          $('.pedido_bano').hide();
          $('.pedido_piso').hide();
          $('.pedido_orientacion').hide();
          $('.pedido_anio').hide();
          $('.pedido_constr').hide();
          $('.pedido_terreno').hide();
          $('.pedido_num_piso').hide();
          $('.pedido_privado').hide();
        
          }
        else if ($('#pedido_tipo').val() == 'Oficina'){
          $('.pedido_superficie').show();
          $('.pedido_sup_util').show();
          $('.pedido_estacionamiento').show();
          $('.pedido_dorms').hide();
          $('.pedido_bano').show();
          $('.pedido_piso').show();
          $('.pedido_orientacion').show();
          $('.pedido_anio').show();
          $('.pedido_constr').hide();
          $('.pedido_terreno').hide();
          $('.pedido_num_piso').hide();
          $('.pedido_privado').show();
          }
        else if ($('#pedido_tipo').val() == 'Parcela'){
          $('.pedido_superficie').show();
          $('.pedido_sup_util').hide();
          $('.pedido_estacionamiento').hide();
          $('.pedido_dorms').show();
          $('.pedido_bano').show();
          $('.pedido_piso').hide();
          $('.pedido_orientacion').hide();
          $('.pedido_anio').hide();
          $('.pedido_constr').show();
          $('.pedido_terreno').hide();
          $('.pedido_num_piso').show();
          $('.pedido_privado').hide();
        }
        else if($('#pedido_tipo').val() == 'Casa'){
          $('.pedido_superficie').hide();
          $('.pedido_sup_util').hide();
          $('.pedido_estacionamiento').hide();
          $('.pedido_dorms').show();
          $('.pedido_bano').show();
          $('.pedido_piso').hide();
          $('.pedido_orientacion').hide();
          $('.pedido_anio').show();
          $('.pedido_constr').show();
          $('.pedido_terreno').show();
          $('.pedido_num_piso').show();
          $('.pedido_privado').hide();
        }
        else{
          $('.pedido_superficie').show();
          $('.pedido_sup_util').show();
          $('.pedido_estacionamiento').show();
          $('.pedido_dorms').show();
          $('.pedido_bano').show();
          $('.pedido_piso').show();
          $('.pedido_orientacion').show();
          $('.pedido_anio').show();
          $('.pedido_constr').hide();
          $('.pedido_terreno').hide();
          $('.pedido_num_piso').hide();
          $('.pedido_privado').hide();
        }
       
    });    
  
    </script>
        
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Tasar', class: 'btn btn-success' %>
  </div>
  

<script type="text/javascript">
$(document).ready(function(){
    // Call Geo Complete
    $("#address").geocomplete({details:"form#new_pedido"});
  });
</script> 
<% end %> 


</div>

<div class="form-group">
  <input type="text" name="lat" class="form-control" placeholder="Latitude" >
</div>
<div class="form-group">
  <input type="text" name="lng" class="form-control" placeholder="Longitude" readonly>
</div>