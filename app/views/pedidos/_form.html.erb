
<div class= 'container'>
<%= simple_form_for( @pedido) do |f| %>
  
  
  
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group">
    <%= f.input :nombre, label: 'Nombre', :required => true %>
    <%= f.input :mail, label: 'Correo', placeholder: 'nombre@dominio.com', :required => true %>
    <%= f.input :telefono, label: 'Teléfono', placeholder: '+569123456789', :required => true %>
  </div> 
  <div class="form-group">
  <br>
  <h5> Porfavor ingrese los datos sobre la propiedad a tasar</h5>
    
    <%= f.input :tipo, collection: ['Departamento','Casa','Oficina', 'Terreno', 'Parcela', 'Estacionamiento'], :required => true %>
    <%= f.input :operacion, label: 'Operación', as: :radio_buttons, wrapper: :vertical_collection_inline, collection: ['Venta', 'Arriendo'], placeholder: 'Seleccione accion que desea realizar con la propiedad', :required => true %>
    <%= f.input :direccion, label: 'Dirección', hint: 'Dirección de la propiedad a tasar.', :required => true %>  
    <%= f.input :region, collection: [
      'I Región de Tarapacá',
      'II Región de Antofagasta', 
      'III Región de Atacama', 
      'IV Región de Coquimbo', 
      'V Región de Valparaíso', 
      'VI Región del Libertador General Bernardo O’Higgins',
      'VII Región del Maule', 
      'VIII Región del Biobío',  
      'IX Región de La Araucanía',
      'X Región de Los Lagos',
      'XI Región Aysén del General Carlos Ibáñez del Campo',
      'XII Región de Magallanes y Antártica Chilena',
      'Región Metropolitana de Santiago',
      'XIV Región de Los Ríos',
      'XV Región de Arica y Parinacota',
      'XVI Región de Ñuble'], label: 'Región', :required => true %>
    
    <%= f.input :comuna, :required => true %>
    <%= f.input :superficie, placeholder: 'Superficie total aprox.' %>
    <%= f.input :dorms , label: 'Dormitorios'%>
    
    <%= f.input :bano, label: 'Baños', collection: 0 .. 10 %>
    <%= f.input :estacionamiento , label: 'Estacionamientos'%>
    <%= f.input :anio, label: 'Año', collection: 1900 .. Time.current.year , :required => true %>
    <%= f.input :piso, label: 'Cantidad de Pisos', hint: 'En caso de ser un departamento u oficina ingresar el piso en el que se encuentra' %>
    <%= f.input :descripcion, as: :text, placeholder: 'Datos adicionales que desee agregar sobre su propiedad' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, label: 'Tasar', class: 'btn btn-success' %>
  </div>

  
<% end %> 
</div>